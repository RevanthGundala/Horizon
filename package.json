{
  "name": "horizon",
  "version": "1.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "electron:dev": "concurrently \"vite --port 5173\" \"npm run electron:start\"",
    "electron:build": "npm run build && tsc -p electron/tsconfig.json",
    "electron:start": "wait-on http://localhost:5173 && electron .",
    "electron:package": "npm run electron:build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Electron.js application with Vite, React, and TypeScript",
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.3",
    "typescript": "^5.8.2",
    "vite": "^6.2.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@blocknote/core": "^0.27.0",
    "@blocknote/mantine": "^0.27.0",
    "@blocknote/react": "^0.27.0",
    "@tanstack/react-router": "^1.114.34",
    "@workos-inc/node": "^7.45.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "build": {
    "appId": "com.horizon.app",
    "productName": "Horizon",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
