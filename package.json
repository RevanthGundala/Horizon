{
  "name": "horizon",
  "version": "1.0.0",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "bun run electron:build && concurrently \"bun run web:dev\" \"bun run electron:start\"",
    "web:dev": "vite --port 5173",
    "build": "tsc && vite build",
    "gen-types": "npx supabase gen types typescript --project-id $PROJECT_REF --schema public > src/types/db.ts",
    "electron:dev": "concurrently \"vite --port 5173\" \"bun run electron:start\"",
    "electron:build": "bun run build && tsc -p electron/tsconfig.json",
    "electron:start": "wait-on http://localhost:5173 && electron .",
    "electron:package": "bun run electron:build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Electron.js application with Vite, React, and TypeScript",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.14.0",
    "@types/pg": "^8.11.11",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.8.2",
    "vite": "^6.2.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@blocknote/core": "^0.27.0",
    "@blocknote/mantine": "^0.27.0",
    "@blocknote/react": "^0.27.0",
    "@tanstack/react-query": "^5.71.10",
    "@tanstack/react-router": "^1.114.34",
    "@tanstack/react-store": "^0.7.0",
    "@tanstack/store": "^0.7.0",
    "@types/cookie": "^1.0.0",
    "@types/uuid": "^10.0.0",
    "better-sqlite3": "^11.9.1",
    "cookie": "^1.0.2",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^10.0.1",
    "pg": "^8.14.1",
    "postgres": "^3.4.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "uuid": "^11.1.0"
  },
  "build": {
    "appId": "com.horizon.app",
    "productName": "Horizon",
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "release"
    }
  }
}
